%h1 Product Details
%p
  %strong Title:
  = @product.title
%p
  %strong Price:
  = print_price(@product.price)
%p
  %strong Stock:
  = print_stock(@product.stock)
%p
  %strong Description:
  = @product.description
%p
  %strong Image Url:
  = @product.image_url
  = image_tag("products/#{@product.image_url}", :size => "100x100")
%p
  = link_to "Edit", edit_product_path(@product)
  |
  = link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", products_path
