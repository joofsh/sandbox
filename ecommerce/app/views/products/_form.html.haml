= form_for @product do |f|
  %p
    = f.label :title
    %br/
    = f.text_field :title
  %p
    = f.label :price
    %br/
    = f.text_field :price
  %p
    = f.label :stock
    = f.text_field :stock
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.label :image_url
    %br/
    = f.text_field :image_url
  %p= f.submit
