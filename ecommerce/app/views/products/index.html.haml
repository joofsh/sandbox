%h1 All Products
%table.table.table-hover.table-condensed
  %tr
    %th Image
    %th Title
    %th Description
    %th Price
    %th Stock
    %th Buy
  - @products.each do |product|
    %tr
      %td= image_tag("products/#{product.image_url}", :size => "80x80")
      %td
        %p.lead= product.title
      %td= product.description
      %td.numbers.price= print_price(product.price)
      %td.numbers.stock= print_stock(product.stock)
      %td
        %button.btn.btn-large= link_to "Add to Cart", order_items_path(:product_id => product.id), :method => :post
      %td= link_to "Show", product
      %td= link_to "Edit", edit_product_path(product)
      %td= link_to "Destroy", product, :confirm => 'Are you sure?', :method => :delete
%br
%p= @test
%p= will_paginate @products
%button.btn= link_to "Create a New Product", new_product_path, :id => "new_product"
