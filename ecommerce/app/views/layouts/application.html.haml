!!!
%html
  %head
    %title Ecommerce Store | #{controller.action_name}
    = stylesheet_link_tag    "style", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .centered
      - if flash[:message]
        %span.message
          = flash[:message]

    %container
      %div.right
        %button.btn.btn-large
          = link_to "View Cart", order_path(@order.id)


      %div.centered
      = yield