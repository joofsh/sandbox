<h1>Top Three Articles</h1>

<ul>
  <% @articles.each do |article|  %>
      <li>
        <%= link_to article.title, article_path(article), :class => 'article_title', :id => 'article_#{article.id}' %>
        <p>   Tags: <%= tag_links(article.tags) %></p>
        <p>  Author: <%= article.article_author %></p>
        <p><br></p>
              <% end %>

      </li>

</ul>